datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Notification {
    notificationId String   @id @default(uuid())
    recipientId    String
    content        String
    category       String
    createdAt      DateTime @default(now())
    readAt         DateTime
    canceledAt     DateTime

    @@index([recipientId])
}
